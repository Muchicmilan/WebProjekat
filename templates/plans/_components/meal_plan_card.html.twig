
<div class="card">
    <div class="flex-between">
        <h4>Plan ishrane</h4>
        <form method="post"
              action="{{ path('app_del_mp', {'id': meal_plan.id}) }}"
              onsubmit="return confirm('Da li ste sigurni da želite da obrišete ovaj plan ishrane?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meal_plan.id) }}">
            <button class="btn btn-delete" style="padding: 0.2rem 0.5rem; font-size: 0.8rem;">Obriši</button>
        </form>
    </div>

    <ul style="list-style-position: inside; margin-top: 0.5rem; padding-left: 0.5rem;">
        {% for meal in meal_plan.meals %}
            <li>{{ meal.name }}</li>
        {% else %}
            <li>Nema definisanih obroka.</li>
        {% endfor %}
    </ul>
</div>