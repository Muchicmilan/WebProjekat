{% extends 'base.html.twig' %}

{% block title %}Create Main Plan{% endblock %}

{% block body %}
<div class="form-card">
    <h1 class="form-title">Create a New Main Plan</h1>

    {{ form_start(planForm, {'attr': {'novalidate': 'novalidate', 'class': 'auth-form'}}) }}

        <div class="form-group">
            {{ form_label(planForm.planName, 'Plan Name') }}
            {{ form_widget(planForm.planName) }}
            {{ form_errors(planForm.planName) }}
        </div>

        <div class="form-group">
            {{ form_label(planForm.notes, 'Notes (optional)') }}
            {{ form_widget(planForm.notes, {'attr': {'placeholder': 'Enter any additional details about this plan...'}}) }}
            {{ form_errors(planForm.notes) }}
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-2">Create Plan</button>

    {{ form_end(planForm) }}
</div>
{% endblock %}