{% extends 'base.html.twig' %}
{% block title %}Dodaj ve탑be{% endblock %}

{% block body %}
<div class="form-card">
    <h1 class="form-title">Dodaj ve탑be za <span style="color: var(--color-accent);">{{ day|capitalize }}</span></h1>
    <p class="text-muted text-center" style="margin-top: -1.5rem; margin-bottom: 2rem;">
        Glavni plan: <strong>{{ plan.planName }}</strong>
    </p>

    {{ form_start(workoutPlanForm, {'attr': {'novalidate': 'novalidate', 'class': 'auth-form'}}) }}
        
        <div class="form-group">
            <label>{{ form_label(workoutPlanForm.workouts) }}</label>
            
            <div class="checkbox-list-container">
                {% for workout_choice in workoutPlanForm.workouts %}
                    <div class="checkbox-grid-item">
                        {{ form_widget(workout_choice) }}
                        {{ form_label(workout_choice) }}
                    </div>
                {% endfor %}
            </div>

            {{ form_errors(workoutPlanForm.workouts) }}
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-2">Sa훾uvaj plan ve탑bi</button>

    {{ form_end(workoutPlanForm) }}

    <div class="text-center mt-3">
        <a href="{{ path('app_plans_workout', {
                'return_url': path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params'))
            }) }}" class="text-muted" style="text-decoration: none;"> Dodaj novu vezbu &rarr;</a>
        <br><br>
        <a href="{{ path('app_plan_view', {'id': plan.id}) }}" class="text-muted" style="text-decoration: none;">&larr; Odustani i vrati se na pregled plana</a>
    </div>
</div>
{% endblock %}