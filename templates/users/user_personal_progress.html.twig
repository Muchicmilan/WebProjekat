{% extends 'base.html.twig' %}

{% block title %}Moj Napredak{% endblock %}

{% block body %}
<div class="progress-container">

    <div class="progress-header">
        <div>
            <h1 class="auth-title" style="margin-bottom: 0.2rem;">Moj Napredak</h1>
            <p class="text-muted">Ovde možete pratiti istoriju vaše težine.</p>
        </div>
        
        <a href="{{ path('app_pers_prog_upd')}}" class="btn btn-primary">
            &#43; Dodaj novi unos
        </a>
    </div>

    <div class="card">
        {% if progress is not empty %}
            <div class="table-container" style="margin-top: 0; padding: 0; box-shadow: none;">
                <table>
                    <thead>
                        <tr>
                            <th>Datum unosa</th>
                            <th>Težina (kg)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entry in progress %}
                            <tr>
                                <td>{{ entry.date|date('d/m/Y') }}</td>
                                <td><strong>{{ entry.weightKg }} kg</strong></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="empty-state-card" style="border: none; background: transparent; padding: 3rem 1rem;">
                <h3 style="color: var(--color-text);">Nema unosa</h3>
                <p class="text-muted mt-1">Još uvek niste uneli nijedan podatak o svom napretku.</p>
                <p class="mt-2">Kliknite na dugme "Dodaj novi unos" da biste započeli praćenje!</p>
            </div>
        {% endif %}
    </div>

</div>
{% endblock %}