{% extends 'base.html.twig' %}

{% block title %}Unesite tezinu{% endblock %}

{% block body %}
    <section class="auth-section">
        <div class="auth-card">
            <h1>Unesite detalje</h1>
            {{form_start(weightForm, {'attr' : {'class' : 'auth-form'}}) }}
                <div class="form-group">
                    {{ form_label(weightForm.weight_kg, 'Vasa kilaza') }}
                    {{ form_widget(weightForm.weight_kg, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(weightForm.weight_kg) }}
                </div>
            <button type="submit" class="btn btn-primary w-100 mt-2">Zavrsi</button>
            {{form_end(weightForm)}}
        </div>
    </section>
{% endblock %}
